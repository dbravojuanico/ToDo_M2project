<div class="main-info">
  <h1>Update this task</h1>
  <form method="post" action=<%-`/task/update/${currentTask._id}`  %>>
    <label
      >Name:<input name="name" type="text" 
      maxlength="20" value="<%- currentTask.name %>"
    /></label>
    <label
      >Description:<input
      maxlength="100"
        name="description"
        type="text"
        value="<%- currentTask.description %>"
    /></label>
    <label
      >Priority:
      <select name="priority">
        <option value="high">HIGH</option>
        <option value="medium">MEDIUM</option>
        <option value="low">LOW</option>
      </select>
    </label>
    <label
      >Status:
      <select name="state">
        <option value="pending">PENDING</option>
        <option value="done">DONE</option>
      </select>
    </label>
    <label
      >User ID:
      <input type="text" name="creator" readonly value="<%- currentUserId  %>"
    /></label>
    <button type="submit">UPDATE TASK</button>
  </form>
  
  <% if (typeof errorMessage !== "undefined") { %>
    <h4><%- errorMessage %></h4>
    <% } %>
  </div>

  