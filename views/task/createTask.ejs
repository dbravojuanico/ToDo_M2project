<div class="main-info">
  <h1>Create new task</h1>
  <form
    class="signup-form"
    method="post"
    action="/task/create"
    enctype="multipart/form-data"
  >
    <div class="label-input">
      <label>Name</label>
      <input maxlength="20" name="name" type="text" />
    </div>
    <div class="label-input">
      <label>Description</label>
      <input maxlength="100" name="description" type="text" />
    </div>
    <div class="label-input">
      <label>Priority </label>
      <select name="priority">
        <option value="high">HIGH</option>
        <option value="medium">MEDIUM</option>
        <option value="low">LOW</option>
      </select>
    </div>

    <div class="label-input">
      <label>Status </label>
      <select name="state">
        <option value="pending">PENDING</option>
        <option value="done">DONE</option>
      </select>
    </div>
    <div class="label-input">
      <label>Image</label>
      <input type="file" name="imageUrl" accept="image/png, image/jpg" />
    </div>

    <div class="label-input">
      <label>User ID </label>
      <input
        type="text"
        name="creator"
        readonly
        value="<%- currentUserId  %>"
      />
    </div>

    <div class="label-input">
      <label>Share with </label>
      <input type="text" name="sharedWith" placeholder="username" />
    </div>

    <div class="signup-button">
      <button type="submit" class="button-10">CREATE TASK</button>
    </div>
  </form>

  <% if (typeof errorMessage !== "undefined") { %>
  <h6 class="err"><%- errorMessage %></h6>
  <% } %>
</div>
